.form-login
    padding 20px
    background highlight-color
    width 100%
    max-width 300px

.form-login__text
    color #fff
    margin 5px 0
    display inline-block

.form-login__input-text
    width 100%
    height 40px
    padding 10px
    margin 5px 0
    border 0
    font-size 12px

.form-login__submit-btn
    margin 5px 0
    float right
    border 2px solid secundary-color
    padding 10px 25px
    background-color initial
    color #fff
    transition .3s
    font-size 12px

.form-login__submit-btn:hover
    background-color secundary-color
    cursor pointer

.form-login__submit--inactive
    background inactive-color
    opacity .7
    border-color #ccc

.form-login__submit--inactive:hover
   background-color inactive-color
   cursor initial